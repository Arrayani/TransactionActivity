<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="375dp"
    android:layout_height="305dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_marginStart="5dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/colorLightGray"
    android:id="@+id/card_single_tx">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginVertical="6dp"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/noEditMerk"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="1dp"
            android:text="Merk:"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvmerkSingleTx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="1dp"
            android:text="ini merk"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="30dp"
            android:text="Nama Barang: "
            android:textColor="@color/black"
            android:textSize="@dimen/tx_size_font"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvnamabarangSingleTx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="120dp"
            android:layout_marginTop="30dp"
            android:text="Stark Stark Star Stark"
            android:textColor="@color/black"
            android:textSize="@dimen/tx_size_font" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Varian: "
            android:textColor="@color/black"
            android:textSize="@dimen/tx_size_font"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvvarianSingleTx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="65dp"
            android:layout_marginTop="60dp"
            android:text="warna coklat warna coklat"
            android:textColor="@color/black"
            android:textSize="@dimen/tx_size_font" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:text="Stok : "
            android:textColor="@color/black"
            android:textSize="@dimen/tx_size_font"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvstokSingleTx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="90dp"
            android:text="100"
            android:textColor="@color/black"
            android:textSize="@dimen/tx_size_font" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:text="Harga Jual: "
            android:textColor="@color/black"
            android:textSize="@dimen/tx_size_font"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="120dp"
            android:text="Rp."
            android:textColor="@color/black"
            android:textSize="@dimen/tx_size_font" />

        <EditText
            android:id="@+id/tvhargajualSingleTx"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginTop="120dp"
            android:background="@color/white"
            android:inputType="number"
            android:lines="1"
            android:maxLength="10"
            android:selectAllOnFocus="true"
            android:text="15.000.000"
            android:textColor="@color/black"
            android:textSize="@dimen/tx_size_font" />

        <!--        <Button-->
        <!--            android:id="@+id/editHarga"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginStart="240dp"-->
        <!--            android:layout_marginLeft="@dimen/tx_size_font"-->
        <!--            android:layout_marginTop="110dp"-->
        <!--            android:text="Edit" />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="160dp"
            android:layout_marginBottom="101dp"
            android:text="Qty: "
            android:textColor="@color/black"
            android:textSize="@dimen/tx_size_font"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tvQtyBeli"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="160dp"
            android:layout_marginBottom="101dp"
            android:background="@color/white"
            android:inputType="number"
            android:lines="1"
            android:maxLength="4"
            android:selectAllOnFocus="true"
            android:text="5000"
            android:textColor="@color/black"
            android:textSize="@dimen/tx_size_font" />

        <TextView
            android:id="@+id/tvunitSingleTx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="95dp"
            android:layout_marginTop="160dp"
            android:layout_marginBottom="101dp"
            android:text="Satuan"
            android:textColor="@color/black"
            android:textSize="@dimen/tx_size_font" />

        <Button
            android:id="@+id/minButtonBeli"
            style="@style/mybutton"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="170dp"
            android:layout_marginLeft="@dimen/tx_size_font"
            android:layout_marginTop="150dp"
            android:layout_marginBottom="90dp"
            android:text="-" />

        <Button
            android:id="@+id/addButtonBeli"
            style="@style/mybutton"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="34dp"
            android:layout_marginLeft="@dimen/tx_size_font"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="55dp"
            android:layout_marginBottom="90dp"
            android:layout_toEndOf="@+id/minButtonBeli"
            android:text="+" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="210dp"
            android:text="Total Harga : "
            android:textColor="@color/black"
            android:textSize="@dimen/tx_size_font"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="210dp"
            android:text="Rp."
            android:textColor="@color/black"
            android:textSize="@dimen/tx_size_font" />

        <TextView
            android:id="@+id/totalSingleTx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="210dp"
            android:text="100000"
            android:textColor="@color/black"
            android:textSize="@dimen/tx_size_font" />

        <Button
            android:id="@+id/cancel_input_single"
            style="@style/mybutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="240dp"
            android:text="Cancel" />

        <Button
            android:id="@+id/submit_input_single"
            style="@style/mybutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="240dp"
            android:text="Submit" />

       <!-- <Button
            android:id="@+id/hargaSave"
            style="@style/mybutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="104dp"
            android:layout_marginEnd="34dp"
            android:text="save"
            android:visibility="invisible" />
-->
        <TextView
            android:id="@+id/hintHargaJual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="127dp"
            android:layout_marginEnd="21dp"
            android:textStyle="bold"
            android:visibility="invisible"
            android:text="Harga Jual>Harga Modal"
            android:textColor="@color/purple_200"

            android:textSize="10dp" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>